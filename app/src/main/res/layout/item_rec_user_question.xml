<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="8dp"
    android:layout_gravity="end"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:src="@drawable/ic_user"
        android:layout_gravity="center_vertical|top"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_user_question"
        android:backgroundTint="@color/bule_seconde"
        app:cardElevation="4dp"
        app:layout_anchorGravity="end"
        app:cardUseCompatPadding="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="6dp"
            android:gravity="end"
            android:paddingStart="16dp"
            android:lineSpacingExtra="0.2dp"
            android:paddingTop="4dp"
            android:paddingEnd="16dp"
            android:paddingBottom="4dp"
            android:text="test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test test "
            android:textAlignment="textEnd"
            android:textColor="?colorOnSecondary"
            android:textDirection="ltr"
            android:textSize="14dp"
            tools:ignore="RtlCompat" />

    </FrameLayout>



</LinearLayout>
